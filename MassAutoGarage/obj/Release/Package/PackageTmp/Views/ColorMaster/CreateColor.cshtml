@model MassAutoGarage.Models.ColorMaster.ColorMasterModel
@{
    ViewBag.Title = "Color";
    ViewBag.pTitle = "Color Master";
    ViewBag.pageTitle = "Forms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://unpkg.com/sweetalert2@7.8.2/dist/sweetalert2.all.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css" rel="stylesheet" />
@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}


@using (Html.BeginForm("CreateColor", "ColorMaster", FormMethod.Post, new { enctype = "multipart/form-data", OnSubmit = "return ValidationForm()", @class = "form-validate" }))
{


    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">CREATE COLOR</h4>
                    <div class="flex-shrink-0">
                        <div class="form-check form-switch form-switch-right form-switch-md">
                            <a href="@Url.Action("ColorDetails","ColorMaster")" class="btn btn-primary" style="float:right;" tabindex ="6"><i class="fa fa-list" aria-hidden="true"></i> BACK TO COLOR LIST</a>
                        </div>
                    </div>
                </div><!-- end card header -->
                <div class="card-body">
                    <div class="live-preview">
                        <div class="row gy-4">
                            <div class="col-xxl-3 col-md-6">
                                <div>
                                    <label for="labelInput" class="form-label">Code <code>*</code></label>
                                    @Html.HiddenFor(m => m.ID, new { @class = "form-control", @id = "HDFID" })
                                    @Html.HiddenFor(m => m.CurrentCount, new { @class = "form-control", @id = "HDFCurrentCount" })
                                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", tabindex = 1 })
                                    @Html.ValidationMessageFor(m => m.Code, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })
                                </div>
                            </div>
                            <div class="col-xxl-3 col-md-6">
                                <div>
                                    <label for="labelInput" class="form-label">Color Name <code>*</code></label>
                                    @Html.DropDownListFor(x => x.ColorId, new SelectList(ViewBag.Colorlist, "ID", "ColorName"), "--Select Color Name--", new { @class = "js-example-basic-single", tabindex = 2 })
                                    @Html.HiddenFor(m => m.ColorCode, new { @class = "form-control", })
                                </div>
                            </div>

                            <div class="col-xxl-3 col-md-6">
                                <div>
                                    <label for="labelInput" class="form-label">Color <code>*</code></label>
                                    <input type="text" class="form-control" id="image-container" readonly style="background-color: @ViewBag.color" />
                                  
                                </div>
                            </div>

                            <div class="col-xxl-3 col-md-6">
                                <div>
                                    <label for="labelInput" class="form-label">Status <code>*</code></label>
                                    @Html.DropDownListFor(x => x.IsActive, new List<SelectListItem>{
                                    new SelectListItem { Text = "---Select---", Value = "0", Selected=true},
                                    new SelectListItem { Text = "Active", Value = "1"},
                                    new SelectListItem { Text = "InActive", Value = "0"},
                                    }, new { @class = "js-example-basic-single", tabindex = 3 })


                                </div>
                            </div>

                            <div class="col-xxl-4 col-md-6">
                                <div>

                                </div>
                            </div>
                            @*<div class="col-xxl-4 col-md-6">
                                    <div>
                                        <input id="colorPickerBasic" type="color" />
                                        <input id="colorPickerAdvanced" type="color" />

                                    </div>
                                </div>*@

                            <div class="col-xxl-4 col-md-6">
                                <div>

                                </div>
                            </div>
                            <!--end col-->
                        </div>
                        <!--end row-->
                    </div>

                </div>

                <div class="col-xxl-12 col-md-12">
                    <div class="form-floating" style="float: right; padding-right: 2%;">
                        <a href="@Url.Action("ColorDetails","ColorMaster")" class="btn btn-danger" tabindex ="4">Cancel</a>
                        <input type="button" value="Save" id="btnSave" class="btn btn-primary" tabindex ="5" />

                    </div>
                </div>
                <br />
            </div>


        </div>

        <!--end col-->
    </div>
}


