@model MassAutoGarage.Models.DepartmentMaster.DepartmentMasterModel
@{
    ViewBag.Title = "Department";
    ViewBag.pTitle = "Department Master";
    ViewBag.pageTitle = "Forms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://unpkg.com/sweetalert2@7.8.2/dist/sweetalert2.all.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css" rel="stylesheet" />
@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}
@using (Html.BeginForm("Department", "DepartmentMaster", FormMethod.Post, new { enctype = "multipart/form-data", OnSubmit = "return ValidationForm()", @class = "form-validate" }))
{


    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">CREATE DEPARTMENT</h4>
                    <div class="flex-shrink-0">
                        <div class="form-check form-switch form-switch-right form-switch-md">
                            <a href="@Url.Action("DepartmentDetails","DepartmentMaster")" class="btn btn-primary" style="float:right;" tabindex="9"><i class="fa fa-list" aria-hidden="true"></i> BACK TO DEPARTMENT LIST</a>
                        </div>
                    </div>
                </div><!-- end card header -->
                <div class="card-body">
                    <div class="live-preview">
                        <div class="row gy-4">
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    @Html.HiddenFor(m => m.ID, new { @class = "form-control", @id = "HDFID" })
                                    @Html.HiddenFor(m => m.CurrentCount, new { @class = "form-control", @id = "HDFCurrentCount" })
                                    <label for="labelInput" class="form-label">Code <code>*</code></label>
                                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @tabindex = 1, @readonly = true })

                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="labelInput" class="form-label">Department Name <code>*</code></label>
                                    @Html.TextBoxFor(m => m.DepartmentName, new { @class = "form-control", @tabindex = 2 })
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Revenue Account <code>*</code></label>
                                    @Html.DropDownListFor(x => x.RevenueAccountID, new SelectList(ViewBag.Revenuelist, "Value", "Text"), "--Select Revenue Account--", new { @class = "js-example-basic-single", @tabindex = 3 })


                                </div>
                            </div>

                            <!--end col-->
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="labelInput" class="form-label">Expenses Account</label>
                                    @Html.DropDownListFor(x => x.ExpenseAccountID, new SelectList(ViewBag.Expenselist, "Value", "Text"), "--Select Expense Account--", new { @class = "js-example-basic-single", @tabindex = 4 })

                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="labelInput" class="form-label">Inventory Account<code>*</code></label>
                                    @Html.DropDownListFor(x => x.InventoryAccountID, new SelectList(ViewBag.Inventorylist, "Value", "Text"), "--Select Inventory Account--", new { @class = "js-example-basic-single", @tabindex = 5 })

                                </div>
                            </div>


                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="labelInput" class="form-label">Status <code>*</code></label>
                                    @Html.DropDownListFor(x => x.IsActive, new List<SelectListItem>{
                                      new SelectListItem { Text = "---Select---", Value = "0", Selected=true},
                                      new SelectListItem { Text = "Active", Value = "1"},
                                      new SelectListItem { Text = "InActive", Value = "0"},
                                      }, new { @class = "js-example-basic-single", @tabindex = 6 })


                                </div>
                            </div>
                            <!--end col-->
                        </div>
                        <!--end row-->
                    </div>

                </div>

                <div class="col-xxl-12 col-md-12">
                    <div class="form-floating" style="float: right; padding-right: 2%;">
                        <a href="@Url.Action("DepartmentDetails","DepartmentMaster")" class="btn btn-danger" tabindex="7">Cancel</a>
                        <input type="button" value="Save" id="btnSave" class="btn btn-primary" tabindex="8" />

                    </div>
                </div>
                <br />
            </div>


        </div>

        <!--end col-->
    </div>
}

@section scripts{


    <!--select2 cdn-->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script src="~/assets/js/pages/select2.init.js"></script>
    <script src="~/assets/libs/prismjs/prism.js"></script>
    <script src="~/assets/js/app.js"></script>

    <!-- prismjs plugin -->
    <!-- App js -->


}



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert2@7.8.2/dist/sweetalert2.all.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css" rel="stylesheet" />

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $(document).ready(function () {

        $('.js-example-basic-single').select2();

        /* LoadUserType();*/

        //$("#StartDate").datepicker({
        //    format: 'dd/mm/yy',
        //    changeMonth: true,
        //    changeYear: true,
        //    todayHighlight: true,

        //});

        var options = $.extend({},
            $.datepicker.regional["es"], {
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true,
            /* yearRange: "-2:+0",*/
            todayHighlight: true,
            /*highlightWeek: true,*/
            /*maxDate: 0*/
        });
        $("#StartDate").datepicker(options);

    })

    var maxLength = 50;
    $('#DepartmentName').change(function () {
        debugger;
        var textlen = $(this).val().length;

        if (textlen > maxLength) {

            $('#DepartmentName').val("");
            swal("Warning", " Accept only 50 Character !", "warning");

        } else {

        }

    });
    $('#DepartmentName').keypress(function (e) {
        debugger;
        var regex = new RegExp("^[a-zA-Z ]+$");
        var strigChar = String.fromCharCode(!e.charCode ? e.which : e.charCode);
        if (regex.test(strigChar)) {
            return true;
        }
        return false
    });


    $("#btnSave").click(function (e) {
        debugger;
        e.preventDefault();


        var _code = $("#Code").val();
        var _DepartmentName = $("#DepartmentName").val();
        var _RevenueAccountID = $("#RevenueAccountID option:selected").val();
        var _ExpenseAccountID = $("#ExpenseAccountID option:selected").val();
        var _InventoryAccountID = $("#InventoryAccountID option:selected").val();
        var _IsActive = $("#IsActive option:selected").val();
        var _Id = $("#HDFID").val();
        var _CurrentCount = $("#HDFCurrentCount").val();

        if (_code != "" && _DepartmentName != "" && _RevenueAccountID != "" && _ExpenseAccountID != "" && _InventoryAccountID != "") {
            var ProductListArr = [];
            var ProductList = {
                ID: _Id,
                CurrentCount: _CurrentCount,
                Code: _code,
                DepartmentName: _DepartmentName,
                RevenueAccountID: _RevenueAccountID,
                ExpenseAccountID: _ExpenseAccountID,
                InventoryAccountID: _InventoryAccountID,
                IsActive: _IsActive

            };
            //ProductListArr.push(ProductList);
            if (confirm("Are you sure you want to continue ?")) {
                $.ajax({
                    type: 'POST',
                    url: '/DepartmentMaster/SaveDepartmentMaster',
                    data: JSON.stringify(ProductList),
                    contentType: "application/json; charset=utf-8",
                    dataType: 'json',
                    success: function (data) {
                        debugger;
                        if (data == "1") {
                            debugger;

                            swal({
                                title: "Success",
                                text: "Records Successfully Saved",
                                type: "success",
                            }).then(function (isConfirm) {
                                if (isConfirm) {
                                    var url = "/DepartmentMaster/DepartmentDetails";
                                    window.location.href = url;
                                } else {

                                }
                            });

                        }
                        else if (data == "2") {

                            swal({
                                title: "Success",
                                text: "Records Successfully Updated",
                                type: "success",
                            }).then(function (isConfirm) {
                                if (isConfirm) {
                                    var url = "/DepartmentMaster/DepartmentDetails";
                                    window.location.href = url;
                                } else {

                                }
                            });
                        }
                        else if (data == "4") {

                            swal("Warning", "Department Already Exist!", "warning");
                        } else {

                            swal("Warning", "Record not save!", "warning");
                        }

                    },
                    error: function (httpResponse) {
                        swal("Warning", "Something Went to Wrong !", "warning");

                    }
                })
            }
        }
        else {

            if (_code == "") {

                swal("Warning", "Please Enter Code !", "warning");
                return false;
            }

            if (_DepartmentName == "") {
                swal("Warning", "Please Enter Department Name !", "warning");
                return false;
            }
            if (_RevenueAccountID == "") {
                swal("Warning", " Please Select Revenue Account !", "warning");
                return false;
            }

            if (_ExpenseAccountID == "") {
                swal("Warning", "Please Select Expense Account !", "warning");
                return false;
            }
            if (_InventoryAccountID == "") {
                swal("Warning", "Please Select Inventory Account!", "warning");
                return false;
            }

        }

    })





</script>

