                                            <th>Company </th>
                                            <th>To Account</th>
                                            <th>InvoiceDate </th>
                                            <th>Invoice No</th>
                                            <th>LPO No</th>
                                            <th>EST No.</th>
                                            <th>Total Amt.</th>
                                            <th>Paid Amt.</th>
                                            <th>Balance Amt.</th>
                                            <th style=" width:8%">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tBody2">
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        <!--end row-->
                    </div>

                </div>

                <div class="col-xxl-12 col-md-12">
                    <div class="form-floating" style="float: right; padding-right: 2%;">
                        <a href="@Url.Action("CustomerOpeningBalance","CustomerMaster")" class="btn btn-danger" tabindex="4">Cancel</a>
                        <input type="button" value="Save" id="btnSave" class="btn btn-primary" tabindex="5" />

                    </div>
                </div>
                <br />
            </div>


        </div>

        <!--end col-->
    </div>
}


