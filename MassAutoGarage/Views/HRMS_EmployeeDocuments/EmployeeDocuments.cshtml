@model MassAutoGarage.Models.HRMS_EmployeeDocuments.HRMSEmployeeDocumentsModel

@{
    ViewBag.Title = "Employee Documents";
    ViewBag.pTitle = "Employee Documents";
    ViewBag.pageTitle = "Forms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}



@using (Html.BeginForm("EmployeeDocuments", "HRMS_EmployeeDocuments", FormMethod.Post, new { enctype = "multipart/form-data", OnSubmit = "return ValidationForm()", @class = "form-validate" }))
{
    <!-- New Dive-->

    <div class="row">
        <div class="col-lg-12">
            <div class="card">



                <div class="card-header main-f">
                    <div class="row">
                        <div class="col-md-6 col-5"> <h5 class="card-title mb-0 gp-detail">HRMS-Employee Documents</h5></div>
                        <div class="col-md-6 col-7" id="hdfbacktolist">
                            <a href="@Url.Action("Index", "HRMS_EmployeeDocuments")" class="btn btn-primary add-new" style="float:right;" tabindex="1"> <i class="fa fa-arrow-left align-middle me-1"></i>BACK TO EMPLOYEE DOCUMENTS LIST</a>
                        </div>
                    </div>
                </div>

                <!-- end card header -->
                <div class="card-body">
                    <div class="live-preview">
                        <div class="row gy-4">
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Branch <code>*</code></label>

                                    @Html.HiddenFor(m => m.EmpDocId, new { @class = "form-control" })

                                    @Html.DropDownListFor(x => x.FK_BranchId, new SelectList(ViewBag.BranchList, "ID", "BranchName"), "- Select Branch -", new { @class = "form-control", tabindex = 1 })
                                    @Html.ValidationMessageFor(m => m.FK_BranchId, "", new { @class = "text-danger" })


                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Employee <code>*</code></label>
                                    @Html.TextBoxFor(m => m.EmployeeName, new { @class = "form-control", tabindex = 2 })
                                    @Html.ValidationMessageFor(m => m.EmployeeName, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Photo Upload <code>*</code></label>
                                    <input type="file"  value="@Model.files" id="files" name="files" class="form-control tabindex = 3"/>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">EmiratesID Upload <code>*</code></label>
                                    <input type="file" id="EmirateFile" name="EmirateFile" class="form-control tabindex = 4" value="@Model.EmirateFile"/>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Passport Upload <code>*</code></label>
                                    <input type="file" id="PassportFile" name="PassportFile" class="form-control tabindex = 5"  value="@Model.PassportFile" />
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Visa Upload<code>*</code></label>
                                    <input type="file" id="VisaFile" name="VisaFile" class="form-control tabindex = 6" value="@Model.VisaFile" />
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Insurance Card Upload <code>*</code></label>
                                    <input type="file" id="InsuranceFile"name="InsuranceFile" class="form-control tabindex = 7" value="@Model.InsuranceFile"/>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Employee Contract Card Upload<code>*</code></label>
                                    <input type="file" id="EmpCardFile" name="EmpCardFile" class="form-control tabindex = 8" value="@Model.EmpCardFile"/>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <input type="button" id="btnsave" value="Save" class="btn btn-success" style=" margin-top: 10%;" />
                                    <input type="button" id="btnReset" value="Reset" class="btn btn-danger" style=" margin-top: 10%;" onclick="return Reset();" />
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-xxl-12 col-md-12">
                                <div class="table-responsive">



                                </div>
                            </div>

                            <div class="col-xxl-12 col-md-12">
                                <div class="form-floating" style="float:right;">


                                </div>

                            </div>
                        </div>
                        <!--end col-->
                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>
    <!--end col-->

}


@section scripts{
    <!-- prismjs plugin -->
    <script src="~/assets/libs/prismjs/prism.js"></script>
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert2@7.8.2/dist/sweetalert2.all.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css" rel="stylesheet" />

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script src="~/MyApp/HRMS_EmployeeDocuments.js"></script>


<script>
    if ($("#EmpDocId").val()!=0)
    {
        $("#btnsave").val('Update');
    }
</script>
