<script type="text/javascript">

    function vouchernew() {
        debugger;
        $.ajax({
            type: 'POST',
            url: '/HRMS_Attendance/GetMaxVoucher',
            data: "{}",
            dataType: "json",
            success: function (result) {
                $.each(result, function (i, v) {
