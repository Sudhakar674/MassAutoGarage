                                        <div>
                                            <label for="labelInput" class="form-label">Start Time<code>*</code></label>
                                            @Html.TextBoxFor(m => m.StartTime1, new { @class = "form-control", tabindex = 9, Value = "1:00:00 PM" })
                                        </div>
