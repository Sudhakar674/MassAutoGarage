                                    <div class="col-xxl-3 col-md-4">
                                        <div>
                                            <label for="labelInput" class="form-label">End Time<code>*</code></label>
                                            @Html.TextBoxFor(m => m.EndTime1, new { @class = "form-control", tabindex = 10, Value = "6:00:00 PM" })
                                        </div>
