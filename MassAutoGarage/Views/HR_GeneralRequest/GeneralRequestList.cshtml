                                <button id="btnprint" class="btn btn-soft-primary btn-sm shadow-none" style="margin-top:20px;" onclick="Print()" tabindex="5"><i class="fa fa-print" aria-hidden="true"></i> Print</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table border="1" id="example" class="display table table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th style=" width: 1%;">S.N.</th>
                                <th>Voucher No.</th>
                                <th>Emp Name</th>
                                <th>Date</th>
                                <th>Designation</th>
                                <th>Branch Name</th>
                                <th>Department Name</th>
                                <th>EmpId</th>
                                <th>Salary Certificate</th>
                                <th>Salary Transfer Letter</th>
                                <th>NOC</th>
                                <th>Experience Certificate</th>
                                <th>Bank/Establishment</th>
                                <th>AcctNo/IBANNo</th>
                                <th>Opne New Bank Acct</th>
                                <th>Transfer Loan To Other Bank</th>
                                <th>Personal Loan</th>
                                <th>NOC To Embassy</th>
                                <th>Confirmation Lettr To Bank</th>
                                <th>Loan TopUp</th>
                                <th>Others</th>
                                <th>Cash Advance</th>
                                <th>Initial NewEmp</th>
                                <th>Against</th>
                                <th>Behalf Of Against</th>
                                <th>Reason</th>
                                <th>Monthly Deduction</th>
                                <th>Salary Slips 3 Months</th>
                                <th>Salary Slips 6 Months</th>
                                <th>Traffic Fine Deduction Amt</th>
                                <th>Salary Card</th>
                                @*<th>Employee Signature</th>*@
