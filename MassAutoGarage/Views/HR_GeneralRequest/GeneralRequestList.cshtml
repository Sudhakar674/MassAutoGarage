                                <th style="width:20%;">Action</th>
                            </tr>
                        </thead>
                        <tbody id="tBodyId">

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td data-th="Srl.No.">@i</td>
                                    <td data-th="Code">@item.VoucherNumber</td>
                                    <td data-th="Code">@item.EmployeeName</td>
                                    <td data-th="Code">@item.Date</td>
                                    <td data-th="Code">@item.Designation</td>
                                    <td data-th="Code">@item.BranchName</td>
                                    <td data-th="Code">@item.DepartmentName</td>
                                    <td data-th="Code">@item.EmpId</td>
                                    <td data-th="Code">@item.SalaryCertificate</td>
                                    <td data-th="Code">@item.SalaryTransferLetter</td>
                                    <td data-th="Code">@item.NOC</td>
                                    <td data-th="Code">@item.ExperienceCertificate</td>
                                    <td data-th="Code">@item.BankEstablishment</td>
                                    <td data-th="Code">@item.AcctNoIBANNo</td>
                                    <td data-th="Code">@item.OpneNewBankAcct</td>
                                    <td data-th="Code">@item.TransferLoanToOtherBank</td>
                                    <td data-th="Code">@item.PersonalLoan</td>
                                    <td data-th="Code">@item.NOCToEmbassy</td>
                                    <td data-th="Code">@item.ConfirmationLettrToBank</td>
                                    <td data-th="Code">@item.LoanTopUp</td>
                                    <td data-th="Code">@item.Others</td>
                                    <td data-th="Code">@item.CashAdvance</td>
                                    <td data-th="Code">@item.InitialNewEmp</td>
                                    <td data-th="Code">@item.Against</td>
                                    <td data-th="Code">@item.BehalfAgainst</td>
                                    <td data-th="Code">@item.Reason</td>
                                    <td data-th="Code">@item.MonthlyDeduction</td>
                                    <td data-th="Code">@item.SalarySlips3Months</td>
                                    <td data-th="Code">@item.SalarySlips6Months</td>
                                    <td data-th="Code">@item.TrafficFineDeductionAmt</td>
                                    <td data-th="Code">@item.SalaryCard</td>
                                    @*<td data-th="Code">@item.EmpSignature</td>*@

                                    @*<td data-th="Color Code">
                                        <a href="@item.EmpSignature" class="btn btn-sm btn-success edit-item-btn" tabindex="6">Download <i class="fa fa-edit"></i></a>
                                    </td>*@
                                    <td data-th="Code">@item.MobileNumber</td>


                                    @*<td data-th="Color Code">
                                            <a href="@item.files" class="btn btn-sm btn-success edit-item-btn" tabindex="6">Download <i class="fa fa-edit"></i></a>
                                        </td>*@


                                    <td data-th="Action">

                                        <div class="d-flex gap-2">
                                            <div class="edit">

                                                <a href="/HR_GeneralRequest/GeneralRequest?Id=@item.Idincrept" class="btn btn-sm btn-success edit-item-btn" tabindex="6">Edit <i class="fa fa-edit"></i></a>
                                            </div>
                                            <div class="remove">
                                                <a href="javascript:void(0)" onclick="return DeleteGeneralRequest('@item.Idincrept')" class="btn btn-sm btn-danger remove-item-btn">Delete <i class="fa fa-trash" aria-hidden="true"></i></a>

                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

