@model MassAutoGarage.Models.GroupMasterModel
@{
    ViewBag.Title = "Group";
    ViewBag.pTitle = "Group Master";
    ViewBag.pageTitle = "Forms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("GroupMaster", "Master", FormMethod.Post, new { enctype = "multipart/form-data", OnSubmit = "return ValidationForm()", @class = "form-validate" }))
{

    <div class="row">
        <div class="col-lg-12">

            <div class="card main-f p-2">
                <div class="row">
                    <div class="col-md-6 col-5"> <h5 class="card-title mb-0 gp-detail">GROUP COMPANY</h5></div>
                    <div class="col-md-6 col-7">
                        <a href="@Url.Action("GroupMasterIndex","Master")" class="btn btn-primary add-new" style="float:right;" tabindex="1"> <i class="fa fa-arrow-left  align-middle me-1"></i> BACK TO GROUP LIST </a>
                    </div>
                </div>




                @*<div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">GROUP COMPANY</h4>
                    <div class="flex-shrink-0">
                        <div class="form-check form-switch form-switch-right form-switch-md">
                            <a href="@Url.Action("GroupMasterIndex","Master")" class="btn btn-primary" style="float:right;" tabindex="6"><i class="fa fa-list" aria-hidden="true"></i> BACK TO GROUP LIST</a>
                        </div>
                    </div>
                </div>*@
    
    <!-- end card header -->
                <div class="card-body">
                    <div class="live-preview">
                        <div class="row gy-4">
                            <div class="col-xxl-3 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Code <code>*</code></label>
                                    @Html.HiddenFor(m => m.Id, new { @id = "HDFID" })
                                    @Html.HiddenFor(m => m.CurrentCount, new { @id = "HDFCurrentCount" })
                                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", tabindex = 1, @readonly = true })
                                    @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })


                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-xxl-3 col-md-4">
                                <div>
                                    <label for="labelInput" class="form-label">Group Name <code>*</code></label>
                                    @Html.TextBoxFor(m => m.GroupName, new { @class = "form-control", tabindex = 2 })

                                    @Html.ValidationMessageFor(m => m.GroupID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-xxl-3 col-md-4">
                                <div>
                                    <label for="labelInput" class="form-label">Status <code>*</code></label>
                                    @Html.DropDownListFor(x => x.IsActive, new List<SelectListItem>{
                                     new SelectListItem { Text = "Active", Value = "1"},
                                     new SelectListItem { Text = "InActive", Value = "0"},
                                     }, new { @class = "form-control select", tabindex = 3 })

                                </div>
                            </div>

                            <!--end col-->
                        </div>
                        <!--end row-->
                    </div>

                </div>

                <div class="col-xxl-12 col-md-12">
                    <div class="form-floating" style="float: right; padding-right: 2%;">

                        <a href="@Url.Action("GroupMasterIndex","Master")" class="btn btn-danger" tabindex="4">Cancel</a>
                        <input type="button" value="Save" id="btnSave" class="btn btn-primary" tabindex="5" />



                    </div>
                </div>
                <br />
            </div>


        </div>

        <!--end col-->
    </div>
    <div id="divLoader" style="display: none; text-align: center; margin-top: -26%;">
        <img src="~/assets/Loader/loading.gif" alt="Loader" style="width: 8%;" />

        @*<div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>*@
    </div>

}

@section scripts{
    <!-- prismjs plugin -->
    <script src="~/assets/libs/prismjs/prism.js"></script>
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>

}

