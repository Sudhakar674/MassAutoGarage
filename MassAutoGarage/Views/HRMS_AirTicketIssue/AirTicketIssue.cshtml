@model MassAutoGarage.Models.HRMS_AirTicketIssue.HRMSAirTicketIssueModel

@{
    ViewBag.Title = "Air Ticket Issue";
    ViewBag.pTitle = "Air Ticket Issue";
    ViewBag.pageTitle = "Forms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- New Dive-->
<script src="https://unpkg.com/sweetalert2@7.8.2/dist/sweetalert2.all.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css" rel="stylesheet" />
@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

@using (Html.BeginForm("AirTicketIssue", "HRMS_AirTicketIssue", FormMethod.Post, new { enctype = "multipart/form-data", OnSubmit = "return ValidationForm()", @class = "form-validate" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header main-f">
                    <div class="row">
                        <div class="col-md-6 col-5"> <h5 class="card-title mb-0 gp-detail">HRMS - AIR TICKET ISSUE</h5></div>
                        <div class="col-md-6 col-7">
                            <a href="@Url.Action("Index", "HRMS_AirTicketIssue")" class="btn btn-primary add-new" style="float:right;" tabindex="1"> <i class="fa fa-arrow-left align-middle me-1"></i>BACK TO AIR TICKET ISSUE LIST</a>
                        </div>
                    </div>
                </div>

                <!-- end card header -->
                <div class="card-body">
                    <div class="live-preview">
                        <div class="row gy-4">

                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Branch Name<code>*</code></label>
                                    @Html.HiddenFor(m => m.ID, new { @class = "form-control" })
                                    @Html.DropDownListFor(x => x.BranchId, new SelectList(ViewBag.BranchList, "ID", "BranchName"), "- Select Branch -", new { @class = "form-control", tabindex = 1 })
                                    @*@Html.ValidationMessageFor(m => m.BranchId, "", new { @class = "text-danger" })*@
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Voucher No<code>*</code></label>
                                    @Html.TextBoxFor(m => m.VoucherNo, new { @class = "form-control", tabindex = 2,@readonly= "@readonly" })
                                    @*@Html.ValidationMessageFor(m => m.VoucherNo, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })*@
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Date<code>*</code></label>
                                    @Html.TextBoxFor(m => m.Date, new { @class = "form-control", tabindex = 3 })
                                    @*@Html.ValidationMessageFor(m => m.Date, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })*@
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Employee Name<code>*</code></label>
                                    @Html.DropDownListFor(x => x.EmployeeId, new SelectList(ViewBag.EmployeeList, "Id", "EmployeeName"), "- Select Employee Name -", new { @class = "form-control", tabindex = 4 })
                                    @*@Html.ValidationMessageFor(m => m.EmployeeId, "", new { @class = "text-danger" })*@
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Ticket Count<code>*</code></label>
                                    @Html.TextBoxFor(m => m.TicketCount, new { @class = "form-control", tabindex = 5 })
                                    @*@Html.ValidationMessageFor(m => m.TicketCount, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })*@
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Ticket From<code>*</code></label>
                                    @Html.TextBoxFor(m => m.TicketFrom, new { @class = "form-control", tabindex = 6 })
                                    @*@Html.ValidationMessageFor(m => m.TicketFrom, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })*@
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">
                                        Ticket To<code>*</code>
                                    </label>
                                    @Html.TextBoxFor(m => m.TicketTo, new { @class = "form-control", tabindex = 7 })
                                    @*@Html.ValidationMessageFor(m => m.TicketTo, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })*@
                                </div>
                            </div>


                            <div class="col-xxl-2 col-md-2">
                                <div>
                                    <label for="basiInput" class="form-label">Arrival Date <code>*</code></label>
                                    @Html.TextBoxFor(m => m.ArrivalDate, new { @class = "form-control", tabindex = 8 })
                                    @*@Html.ValidationMessageFor(m => m.ArrivalDate, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })*@
                                </div>
                            </div>
                            <div class="col-xxl-2 col-md-2">
                                <div>
                                    <label for="basiInput" class="form-label">Departure Date <code>*</code></label>
                                    @Html.TextBoxFor(m => m.DepartureDate, new { @class = "form-control", tabindex = 9 })
                                    @*@Html.ValidationMessageFor(m => m.DepartureDate, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })*@
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Airline Name <code>*</code></label>
                                    @Html.TextBoxFor(m => m.AirlineName, new { @class = "form-control", tabindex = 10 })
                                    @*@Html.ValidationMessageFor(m => m.AirlineName, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })*@
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">PNR Number <code>*</code></label>
                                    @Html.TextBoxFor(m => m.PNRNumber, new { @class = "form-control", tabindex = 11 })
                                    @*@Html.ValidationMessageFor(m => m.PNRNumber, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })*@
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Arrival Airport <code>*</code></label>
                                    @Html.TextBoxFor(m => m.ArrivalAirport, new { @class = "form-control", tabindex = 12 })
                                    @*@Html.ValidationMessageFor(m => m.ArrivalAirport, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })*@
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-4">
                                <div>
                                    <label for="basiInput" class="form-label">Departure Airport<code>*</code></label>
                                    @Html.TextBoxFor(m => m.DepartureAirport, new { @class = "form-control", tabindex = 13 })
                                    @*@Html.ValidationMessageFor(m => m.DepartureAirport, null, new { @class = "field-validation-error", data_valmsg_for = "ShortName" })*@
                                </div>
                            </div>

                            <div class="col-xxl-12 col-md-12">
                                <div class="form-floating" style="float:right;">

                                    @if (Model.ID == null || Model.ID == "")
                                    {
                                        <input type="button" id="btnsave" value="Save" class="btn btn-success" style=" margin-top: 8%;" />
                                        <input type="button" id="btnReset" value="Reset" class="btn btn-danger" style=" margin-top: 8%;" onclick="return Reset();" />
                                    }
                                    else
                                    {
                                        <input type="button" id="btnsave" value="Update" class="btn btn-success" style=" margin-top: 8%;" />
                                        <input type="button" id="btnReset" value="Reset" class="btn btn-danger" style=" margin-top: 8%;" onclick="return Reset();" />
                                    }

                                </div>

                            </div>
                        </div>
                        <!--end col-->
                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>

}
<!--end col-->
@section scripts{
    <!-- prismjs plugin -->
    <script src="~/assets/libs/prismjs/prism.js"></script>
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert2@7.8.2/dist/sweetalert2.all.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css" rel="stylesheet" />

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script src="~/MyApp/HRMS_AirTicketIssue.js"></script>

<script>
  
    $(document).ready(function () {
        vouchernew();
    });

    function vouchernew() {
        debugger;
        $.ajax({
            type: 'POST',
            url: '/HRMS_AirTicketIssue/GetMaxVoucher',
            data: "{}",
            dataType: "json",
            success: function (result) {
                $.each(result, function (i, v) {
                    var i = 'ATIV-' + v.MaxID;
                    $("#VoucherNo").val(i);
                })
            }
        })
    }
</script>




