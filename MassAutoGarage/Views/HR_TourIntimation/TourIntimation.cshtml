<script>
    $(document).ready(function () {
        vouchernew();
    });
    function vouchernew() {
        debugger;
        $.ajax({
            type: 'POST',
            url: '/HR_TourIntimation/GetMaxVoucher',
            data: "{}",
            dataType: "json",
            success: function (result) {
                $.each(result, function (i, v) {

                    if ($("#Idincrept").val() != 0) {
                        $("#VoucherNo").val($("#hdfVoucherNo").val());
                    }
                    else {
                        var i = 'TIV-' + v.MaxID;
                        $("#VoucherNo").val(i);
                    }

                    //var i = 'TIV-' + v.MaxID;
                    //$("#VoucherNo").val(i);
                })
            }
        })
    }
</script>



















