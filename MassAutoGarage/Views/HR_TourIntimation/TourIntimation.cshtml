@using (Html.BeginForm("TourIntimation", "HR_TourIntimation", FormMethod.Post, new { enctype = "multipart/form-data", OnSubmit = "return ValidationForm()", @class = "form-validate", @id = "myformid" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header main-f">
                    <div class="row">
                        <div class="col-md-6 col-5"> <h5 class="card-title mb-0 gp-detail">HR_Tour Intimation</h5></div>
                        <div class="col-md-6 col-7">
                            <a href="@Url.Action("TourIntimationList","HR_TourIntimation")" class="btn btn-primary add-new" style="float:right;" tabindex="1"> <i class="fa fa-arrow-left align-middle me-1"></i> Back To Tour Intimation List</a>
                        </div>
                    </div>
                </div>
                <!-- end card header -->

                <div class="card-body">
                    <div class="live-preview">
                        <div class="row gy-4">
                            <fieldset>
                                <legend style="background-color:#151529">Tour Intimation Form</legend>
                                <div class="row gy-4" style="margin-bottom:15px;">
                                    <div class="col-xxl-3 col-md-3">
                                        <label for="labelInput" class="form-label"> Voucher Number <code>*</code></label>
                                        @Html.HiddenFor(m => m.Idincrept, new { @class = "form-control" })
                                        @Html.HiddenFor(m => m.hdfVoucherNo, new { @class = "form-control" })
                                        @Html.TextBoxFor(m => m.VoucherNo, new { @class = "form-control", @readonly = "readonly", tabindex = 1 })
                                    </div>

                                </div>
                                <hr />
                                <div class="row gy-4" style="margin-bottom:15px;">
                                    <div class="col-xxl-3 col-md-3">
                                        <label for="labelInput" class="form-label">Employee Name <code>*</code></label>
                                        @Html.DropDownListFor(x => x.EmployeeId, new SelectList(ViewBag.ddlEmployee, "Id", "EmployeeName"), "- Select Employee -", new { @class = "form-control", tabindex = 2 })

                                    </div>

                                    <div class="col-xxl-3 col-md-3">
                                        <label for="labelInput" class="form-label">Designation<code>*</code></label>
                                        @Html.DropDownListFor(x => x.DesignationId, new SelectList(ViewBag.ddlDesignation, "Id", "Designation"), "- Select Designation -", new { @class = "form-control", tabindex = 3 })

                                    </div>

                                    <div class="col-xxl-3 col-md-3">
                                        <label for="labelInput" class="form-label">Tour Destination<code>*</code></label>
                                        @Html.TextBoxFor(m => m.TourDestination, new { @class = "form-control", tabindex = 4 })
                                    </div>
                                    <div class="col-xxl-3 col-md-3">
                                        <label for="labelInput" class="form-label">Travel Mode<code>*</code></label>
                                        @Html.DropDownList("TravelModeID", new List<SelectListItem>
                                         {
                                             new SelectListItem{ Text="--Select Travel Mode--", Value = "" },
                                             new SelectListItem{ Text="By Road", Value = "1" },
                                             new SelectListItem{ Text="By Air", Value = "2" },
                                          },new { @class = "form-control" })
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="row gy-4">
                            <fieldset style="margin-top:50px;">
                                <legend style="background-color:#151529">Scheduled Travel Dates</legend>
                                <div class="row gy-4" style="margin-bottom:15px;">
                                    <div class="col-xxl-4 col-md-4">
                                        <label for="labelInput" class="form-label">Start Date<code>*</code></label>
                                        @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", @readonly = "readonly", tabindex = 6 })

                                    </div>

                                    <div class="col-xxl-4 col-md-4">
                                        <label for="labelInput" class="form-label">Return Date<code>*</code></label>
                                        @Html.TextBoxFor(m => m.ReturnDate, new { @class = "form-control", @readonly = "readonly", tabindex = 7 })

                                    </div>

                                    <div class="col-xxl-4 col-md-4">
                                        <label for="labelInput" class="form-label">Purpose Of Tour<code>*</code></label>
                                        @Html.TextBoxFor(m => m.PurposeOfTour, new { @class = "form-control", tabindex = 8 })

                                    </div>
                                    <div class="col-xxl-6 col-md-6">
                                        <label for="labelInput" class="form-label">Details<code>*</code></label>
                                        @Html.TextAreaFor(m => m.Details, new { @class = "form-control", tabindex = 9 })
                                    </div>
                                    <div class="col-xxl-6 col-md-6">
                                        <label for="labelInput" class="form-label">Suggest Replacement/Handing Over To : (During Absence)<code>*</code></label>
                                        @Html.TextAreaFor(m => m.SuggestReplacement, new { @class = "form-control", tabindex = 10 })
                                    </div>
                                    <div class="col-xxl-12 col-md-12">
                                        <label for="labelInput" class="form-label">Acknowledgement Of Taking Over<code>*</code></label>
                                        @Html.TextAreaFor(m => m.Acknowledgement, new { @class = "form-control", tabindex = 11 })
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        <div class="row gy-4">
                            <fieldset style="margin-top:50px;">
                                <legend style="background-color:#151529">PR/HR Assistance</legend>
                                <div class="row gy-4" style="margin-bottom:15px;">
                                    <h5 style="margin-top:40px;">Visa  Application :</h5>
                                    <div class="col-xxl-6 col-md-6">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.VisaSingleEntry, new { tabindex = 12 }) Single Entry
                                        </label>
                                    </div>
                                    <div class="col-xxl-6 col-md-6">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.VisaMultipleEntry, new { tabindex = 13 }) Multiple Entry
                                        </label>
                                    </div>
                                    <div class="col-xxl-5 col-md-5">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.HotelEconomic, new { tabindex = 14 }) Hoten(Economical)............Nights.

                                        </label>
                                    </div>
                                    <div class="col-xxl-7 col-md-7">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.PassportRelease, new { tabindex = 15 }) Passport Release:For Visa(Passport Release Form To Be Filled Separately)
                                        </label>
                                    </div>
                                </div>
                                <div class="row gy-4" style="margin-bottom:15px;">
                                    <h5>Travel Insurance :</h5>
                                    <div class="col-xxl-6 col-md-6">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.TravelInsuranceYes, new { tabindex = 16 })Yes
                                        </label>
                                    </div>
                                    <div class="col-xxl-6 col-md-6">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.TravelInsuranceNo, new { tabindex = 17 })No
                                        </label>
                                    </div>
                                </div>
                                <div class="row gy-4" style="margin-bottom:15px;">
                                    <h5>Accounts  Assistance :</h5>
                                    <div class="col-xxl-12 col-md-12">
                                        <label for="labelInput" class="form-label">Cash Advance Amount<code>*</code></label>
                                        @Html.TextBoxFor(m => m.CashAdvanceAmt, new { @class = "form-control", tabindex = 18, @onkeypress = "return isNumberOrDecimal(event);" })
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
                <br />
                <div class="col-xxl-12 col-md-12">
                    <div class="form-floating" style="float: right; padding-right: 2%;">
                        <input type="button" value="@ViewBag.ButtonText" id="btnsave" class="btn btn-primary" />
                        <a href="/HR_TourIntimation/TourIntimation" class="btn btn-danger">Reset</a>
                    </div>
                </div>
                <br />
            </div>
        </div>
        <!--end col-->
    </div>
    <!-- Modal -->
}

