                                        @Html.TextBoxFor(m => m.EmpNo, new { @class = "form-control", tabindex = 3 })

                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <label for="labelInput" class="form-label">Branch<code>*</code></label>
                                        @Html.DropDownListFor(x => x.BranchId, new SelectList(ViewBag.ddlBranch, "Id", "BranchName"), "- Select Branch -", new { @class = "form-control", tabindex = 5 })

