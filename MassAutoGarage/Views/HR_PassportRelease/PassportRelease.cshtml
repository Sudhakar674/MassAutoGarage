<script>
    $(document).ready(function () {
        vouchernew();
    });
    function vouchernew() {
        debugger;
        $.ajax({
            type: 'POST',
            url: '/HR_PassportRelease/GetMaxVoucher',
            data: "{}",
            dataType: "json",
            success: function (result) {
                $.each(result, function (i, v) {

                    if ($("#Idincrept").val() != 0) {
                        $("#VoucherNo").val($("#hdfVoucherNo").val());
                    }
                    else {
                        var i = 'PPRV-' + v.MaxID;
                        $("#VoucherNo").val(i);
                    }

                    //var i = 'PPRV-' + v.MaxID;
                    //$("#VoucherNo").val(i);
                })
            }
        })
    }
</script>













