@using (Html.BeginForm("LeaveRequest", "HR_LeaveRequest", FormMethod.Post, new { enctype = "multipart/form-data", OnSubmit = "return ValidationForm()", @class = "form-validate", @id = "myformid" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header main-f">
                    <div class="row">
                        <div class="col-md-6 col-5"> <h5 class="card-title mb-0 gp-detail">HR_Leave Request</h5></div>
                        <div class="col-md-6 col-7">
                            <a href="@Url.Action("LeaveRequestList","HR_LeaveRequest")" class="btn btn-primary add-new" style="float:right;" tabindex="1"> <i class="fa fa-arrow-left align-middle me-1"></i> Back To Leave Request List</a>
                        </div>
                    </div>
                </div>
                <!-- end card header -->
                <div class="card-body">
                    <div class="live-preview">
                        <div class="row gy-4">
                            <fieldset>
                                <legend style="background-color:#151529">( Please Fill In The Information Inside The Box And Line Provided )</legend>

                                <div class="row gy-4" style="margin-bottom:15px;">

                                    <div class="col-xxl-3 col-md-3">
                                        <label for="labelInput" class="form-label"> Voucher Number <code>*</code></label>
                                        @Html.HiddenFor(m => m.HDF_MedicalCertificateFile, new { @class = "form-control",@id= "HDF_MedicalCertificateFile" })
                                        @Html.HiddenFor(m => m.Idincrept, new { @class = "form-control" })
                                        @Html.HiddenFor(m => m.hdfVoucherNo, new { @class = "form-control" })

                                        @Html.TextBoxFor(m => m.VoucherNo, new { @class = "form-control", @readonly = "readonly", tabindex = 1 })
                                    </div>

                                </div>
                                <hr />
                                <div class="row gy-4" style="margin-bottom:15px;">
                                    <div class="col-xxl-3 col-md-4">
                                        <label for="labelInput" class="form-label">Employee Name <code>*</code></label>
                                        @Html.DropDownListFor(x => x.EmployeeId, new SelectList(ViewBag.ddlEmployee, "Id", "EmployeeName"), "- Select Employee -", new { @class = "form-control", tabindex = 2 })
                                    </div>
                                    <div class="col-xxl-3 col-md-4">
                                        <label for="labelInput" class="form-label">Date<code>*</code></label>
                                        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", @readonly = "readonly", tabindex = 3 })
                                    </div>
                                    <div class="col-xxl-3 col-md-4">
                                        <label for="labelInput" class="form-label">Designation<code>*</code></label>
                                        @Html.DropDownListFor(x => x.DesignationId, new SelectList(ViewBag.ddlDesignation, "Id", "Designation"), "- Select Designation -", new { @class = "form-control", tabindex = 4 })
                                    </div>
                                    <div class="col-xxl-3 col-md-4">
                                        <label for="labelInput" class="form-label">Emp No<code>*</code></label>
                                        @Html.TextBoxFor(m => m.EmpNo, new { @class = "form-control", tabindex = 5 })
                                    </div>
                                    <div class="col-xxl-3 col-md-4">
                                        <label for="labelInput" class="form-label">Company<code>*</code></label>
                                        @Html.DropDownListFor(x => x.CompanyID, new SelectList(ViewBag.ddlCompany, "Id", "CompanyName"), "- Select Company Name -", new { @class = "form-control", tabindex = 6 })
                                    </div>
                                    <div class="col-xxl-3 col-md-4">
                                        <label for="labelInput" class="form-label">Department<code>*</code></label>
                                        @Html.DropDownListFor(x => x.DepartmentId, new SelectList(ViewBag.ddlDepartment, "Id", "DepartmentName"), "- Select Department Name -", new { @class = "form-control", tabindex = 7 })
                                    </div>

                                    <div class="col-xxl-6 col-md-6" style="padding-right:20px;">
                                        <label for="labelInput" class="form-label">Branch<code>*</code></label>
                                        @Html.DropDownListFor(x => x.BranchId, new SelectList(ViewBag.ddlBranch, "Id", "BranchName"), "- Select Branch Name -", new { @class = "form-control", tabindex = 8 })
                                    </div>
                                    <div class="col-xxl-6 col-md-6" style="padding-right:20px;">
                                        <label for="labelInput" class="form-label">Date Of Joining<code>*</code></label>
                                        @Html.TextBoxFor(m => m.DateOfJoining, new { @class = "form-control", @readonly = "readonly", tabindex = 9 })
                                    </div>


                                </div>
                            </fieldset>
                        </div>

                        <div class="row gy-4">
                            <fieldset style="margin-top:50px;" id="fieldsetCashAdvance">
                                <legend style="background-color:#151529;" id="legendCashAdvance">Type Of Leave (Please Tick Whichever Is Applicable)</legend>

                                <div class="row gy-4" style="margin-bottom: 15px; padding-left: 10px; padding-right: 10px;">
                                    <div class="col-xxl-4 col-md-4">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.MarriageLeave, new { tabindex = 10 }) Marriage Leave (Uae Nationals)
                                        </label>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.AnnualLeave, new { tabindex = 11 }) Annual Leave
                                        </label>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.AuthorizedUnpaidLeave, new { tabindex = 12 }) Authorized UnPaid Leave
                                        </label>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.EmergencyLeave, new { tabindex = 13 }) Emergency Leave
                                        </label>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.SickLeave, new { tabindex = 14 }) Sick Leave
                                        </label>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.MaternityLeave, new { tabindex = 15 }) Maternity/Paternity Leave
                                        </label>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.Others, new { tabindex = 16 }) Others
                                        </label>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        @Html.TextBoxFor(m => m.PleaseSpecifyOtherLeave, new { @class = "form-control", @placeholder = "Please Specify Other Leave", tabindex = 17, @onkeypress = "return onlyAlphabets();" })
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <label class="form-control">
                                            @Html.CheckBoxFor(m => m.LocalLeave, new { tabindex = 18 }) Local Leave
                                        </label>
                                    </div>
                                </div>
                            </fieldset>
                        </div>


                        <div class="row gy-4">
                            <fieldset style="margin-top:50px;" id="fieldsetCashAdvance">
                                <legend style="background-color:#151529;" id="legendLeaveDate">Leave Date</legend>

                                <div class="row gy-4" style="margin-bottom: 15px; padding-left: 10px; padding-right: 10px;">
                                    <div class="col-xxl-6 col-md-6">
                                        <label for="labelInput" class="form-label">From Date<code>*</code></label>
                                        @Html.TextBoxFor(m => m.LeaveFromDate, new { @class = "form-control", @readonly = "readonly", tabindex = 19 })
                                    </div>
                                    <div class="col-xxl-6 col-md-6">
                                        <label for="labelInput" class="form-label">To Date<code>*</code></label>
                                        @Html.TextBoxFor(m => m.LeaveToDate, new { @class = "form-control", @readonly = "readonly", tabindex = 20 })
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        <div class="row gy-4">
                            <fieldset style="margin-top:50px;" id="fieldsetCashAdvance">
                                <legend style="background-color:#151529;" id="legendAirTicket">Air Ticket (As Per Eligibility)</legend>

                                <div class="row gy-4" style="margin-bottom: 15px; padding-left: 10px; padding-right: 10px;">
                                    <div class="col-xxl-4 col-md-4">
                                        <label for="labelInput" class="form-label">AirPort Name<code>*</code></label>
                                        @Html.TextBoxFor(m => m.AirportName, new { @class = "form-control", tabindex = 21, @onkeypress = "return onlyAlphabets();" })
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <label for="labelInput" class="form-label">AirPort From Name<code>*</code></label>
                                        @Html.TextBoxFor(m => m.FromAirportName, new { @class = "form-control", tabindex = 22, @onkeypress = "return onlyAlphabets();" })
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <label for="labelInput" class="form-label">AirPort To Name<code>*</code></label>
                                        @Html.TextBoxFor(m => m.ToAirportName, new { @class = "form-control", tabindex = 23, @onkeypress = "return onlyAlphabets();" })
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        <div class="row gy-4">
                            <fieldset style="margin-top:50px;" id="fieldsetCashAdvance">
                                <legend style="background-color:#151529;" id="legendApplyForSickLeave">Please Fill In The Information Below To Apply For Sick Leave</legend>

                                <div class="row gy-4" style="margin-bottom:15px; padding-left: 10px; padding-right: 10px;">
                                    <div class="col-xxl-12 col-md-12">
                                        <label for="labelInput" class="form-label">Reason For Sick Leave<code>*</code></label>
                                        @Html.TextBoxFor(m => m.ReasonforSickLeave, new { @class = "form-control", tabindex = 24, @onkeypress = "return onlyAlphabets();" })
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <label class="form-control" style="text-align:end;font-size:12px;"><b>Medical Certificate : </b></label>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        @Html.DropDownListFor(m => m.MedicalCertificate, new List<SelectListItem>{
                                         new SelectListItem { Text = "No", Value = "0"},
                                         new SelectListItem { Text = "Yes (Kindly Attack It With Your Request)", Value = "1"},
                                         }, new { @class = "form-select mb-3", onclick = "return getvalues()" })
                                    </div>
                                    <div class="col-xxl-4 col-md-4" style="display:none" id="divhdfuploadfile">
                                        <label class="form-control">
                                            <input type="file" id="MedicalCertificateFile" />
                                        </label>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="row gy-4" style="margin-top:10px; padding-left: 10px; padding-right: 10px;">
                            <div class="col-xxl-6 col-md-6" style="padding-left: 10px; padding-right: 10px;">
                                <label for="labelInput" class="form-label">Email Id <code>*</code></label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", tabindex = 27 })
                            </div>
                            <div class="col-xxl-6 col-md-6" style="padding-left: 10px; padding-right:15px;">
                                <label for="labelInput" class="form-label">Mobile Number<code>*</code></label>
                                @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control", tabindex = 28, @maxlength = "15", @onkeypress = "return isNumberKey(event);" })
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="col-xxl-12 col-md-12">
                    <div class="form-floating" style="float: right; padding-right: 2%;">
                        @if (Model.Idincrept == null || Model.Idincrept == "")
                        {
                            <button id="btnsave" class="btn btn-primary">Save</button>
                            <a href="/HR_LeaveRequest/LeaveRequest" class="btn btn-danger">Reset</a>
                        }
                        else
                        {
                            <button id="btnsave" class="btn btn-primary">Update</button>
                            <a href="/HR_LeaveRequest/LeaveRequest" class="btn btn-danger">Reset</a>
                        }
                    </div>
                </div>
                <br />
            </div>
        </div>
        <!--end col-->
    </div>
    <!-- Modal -->
}

