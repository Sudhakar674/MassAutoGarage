<script>

    function getvalues() {
        debugger;
        var _MedicalCertificate = $("#MedicalCertificate").val();
        if (_MedicalCertificate == "1") {
            $("#divhdfuploadfile").show()
        }
        else if (_MedicalCertificate == "0") {
            $("#divhdfuploadfile").hide()
        }
    }

    $(document).ready(function () {
        var _Idincrept = $("#Idincrept").val();
        if (_Idincrept != 0) {
            debugger;
            getvalues();
        }

        vouchernew();
    });
    function vouchernew() {
        debugger;
        $.ajax({
            type: 'POST',
            url: '/HR_LeaveRequest/GetMaxVoucher',
            data: "{}",
            dataType: "json",
            success: function (result) {
                $.each(result, function (i, v) {

                    if ($("#Idincrept").val() != 0) {
                        $("#VoucherNo").val($("#hdfVoucherNo").val());
                    }
                    else {
                        var i = 'LRV-' + v.MaxID;
                        $("#VoucherNo").val(i);
                    }

                    //var i = 'LRV-' + v.MaxID;
                    //$("#VoucherNo").val(i);
                })
            }
        })
    }
</script>
