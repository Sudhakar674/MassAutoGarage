<script>
    $(document).ready(function () {



    });





    $('#TRN').keypress(function (e) {
        debugger;
        if (String.fromCharCode(e.keyCode).match(/[^0-9]/g)) return false;
    });


    var maxLength = 50;
    $('#CompanyName').change(function () {
        debugger;
        var textlen = $(this).val().length;

        if (textlen > maxLength) {

            $('#CompanyName').val("");
            swal("Warning", " Accept only 50 Character !", "warning");

        } else {

        }

    });

    var maxLength2 = 20;
    $('#TRN').change(function () {
        debugger;
        var textlen = $(this).val().length;

        if (textlen > maxLength2) {

            $('#TRN').val("");
            swal("Warning", " Accept only 20 Character !", "warning");

        } else {

        }

    });

    $('#CompanyName').keypress(function (e) {
        debugger;
        var regex = new RegExp("^[a-zA-Z ]+$");
        var strigChar = String.fromCharCode(!e.charCode ? e.which : e.charCode);
        if (regex.test(strigChar)) {
            return true;
        }
        return false
    });



    $("#btnSave").click(function (e) {
        debugger;
        e.preventDefault();

        var _code = $("#Code").val();
        var _GroupID = $("#GroupID option:selected").val();
        var _CompanyName = $("#CompanyName").val();
        var _TRN = $("#TRN").val();
        var _LocationMapUrl = $("#LocationMapUrl").val();
        var _Email = $("#Email").val();
        var _Address = $("#Address").val();
        var _companyId = $("#HDFID").val();
        var _CurrentCount = $("#HDFCurrentCount").val();
        var _IsActive = $("#IsActive option:selected").val();

        if (_code != "" && _GroupID != "" && _CompanyName != "" && _TRN != "" && _Email != "" && _Address != "") {

            var ProductListArr = [];
            var ProductList = {
                Id: _companyId,
                CurrentCount: _CurrentCount,
                Code: _code,
                GroupID: _GroupID,
                CompanyName: _CompanyName,
                Address: _Address,
                TRN: _TRN,
                Email: _Email,
                LocationMapUrl: _LocationMapUrl,
                IsActive: _IsActive

            };
            //ProductListArr.push(ProductList);

            if (confirm("Are you sure you want to continue ?")) {
                $.ajax({
                    type: 'POST',
                    url: '/CompanyMaster/SaveCompanyMaster',
                    data: JSON.stringify(ProductList),
                    contentType: "application/json; charset=utf-8",
                    dataType: 'json',
                    success: function (data) {
                        debugger;
                        if (data == "1") {
                            debugger;
                            swal({
                                title: "Success",
                                text: "Records Successfully Saved",
                                type: "success",
                            }).then(function (isConfirm) {
                                if (isConfirm) {
                                    var url = "/CompanyMaster/Index";
                                    window.location.href = url;
                                } else {

                                }
                            });

                        }
                        else if (data == "2") {

                            swal({
                                title: "Success",
                                text: "Records Successfully Updated",
                                type: "success",
                            }).then(function (isConfirm) {
                                if (isConfirm) {
                                    var url = "/CompanyMaster/Index";
                                    window.location.href = url;
                                } else {

                                }
                            });
                        }
                        else if (data == "4") {
                            swal("Warning", "This Code is Already Exist !", "warning");
                        } else {

                            swal("Warning", "Record not save!", "warning");
                        }

                    },
                    error: function (httpResponse) {

                        swal("Warning", "Something Went to Wrong!", "warning");

                    }
                })
            }
        }
        else {

            if (_code == "") {
                swal("Warning", "Please Enter Code !", "warning");
                return false;
            }
            if (_GroupID == "") {
                swal("Warning", "Please Select Group Name!", "warning");
                return false;
            }
            if (_CompanyName == "") {
                swal("Warning", "Please Enter Company Name!", "warning");
                return false;
            }
            if (_TRN == "") {
                swal("Warning", "Please Enter TRN !", "warning");
                return false;
            }

            if (_Email == "") {
                swal("Warning", "Please Enter Email Address!", "warning");
                $("#Email").val('');
                return false;
            }
            if (_Address == "") {
                swal("Warning", "Please Enter Address!", "warning");
                return false;
            }
        }

    })



</script>


